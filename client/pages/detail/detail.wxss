.product-card {
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  background: #fff;
  padding-bottom: 20rpx;
}

.product-image {
  display: block;
  margin: 0 auto;
  width: 450rpx;
}

.product-name {
  font-weight: bold;
  color: #4a4a52;
  font-size: 40rpx;
  margin: 0 0 5rpx 30rpx;
}

.product-source {
  color: #978c8e;
  font-size: 28rpx;
  font-weight: 400;
  margin-left: 30rpx;
}

.product-meta {
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin-right: 45rpx;
}

.product-money {
  background: #f9e777;
  border-radius: 50%;
  width: 48rpx;
  height: 48rpx;
  line-height: 48rpx;
  text-align: center;
  color: #34373d;
  font-weight: 900;
  margin-right: 20rpx;
}

.product-price {
  font-weight: 500;
}

.info-card {
  padding: 0 26rpx;
  margin: 30rpx 30rpx;
  background: #fff;
  box-shadow: 0 2rpx 13rpx 5rpx rgba(0, 0, 0, 0.02);
  border-radius: 13rpx;
}

.advantage {
  padding: 43rpx 15rpx 39rpx;
  font-size: 27rpx;
  font-weight: bold;
  color: #34373e;
  border-bottom: 1px solid rgba(151, 151, 151, 0.2);
}

.advantage-item {
  display: flex;
  align-items: center;
}

.advantage-icon {
  width: 22rpx;
  height: 16rpx;
}

.advantage-text {
  margin-left: 15rpx;
  line-height: 47rpx;
}

.comment-entry {
  padding: 30rpx 18rpx;
}

.comment-btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: rgba(29, 29, 38, 0.8);
}

.comment-text {
  font-size: 30rpx;
  font-weight: bold;
}

.comment-count {
  flex: 1;
  margin-right: 16rpx;
  text-align: right;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8b8b8b;
}

.comment-arrow {
  width: 11rpx;
  height: 18rpx;
}

.comment-preview {
  margin-top: 26rpx;
  font-size: 28rpx;
  line-height: 40rpx;
  color: #8b8b8b;
}

.operation {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}

.add-cart, .buy-now {
  flex: 1;
  text-align: center;
  line-height: 100rpx;
  font-weight: bold;
  font-size: 29rpx;
  color: #34373d;
}

.add-cart {
  background: rgba(245, 224, 105, 0.6);
}

.buy-now {
  background: #f8e14f;
}
